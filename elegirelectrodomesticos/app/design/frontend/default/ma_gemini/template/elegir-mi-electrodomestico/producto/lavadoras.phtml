<script type="text/javascript">
    function getRespuestas(){
        var lava = jQuery("input[name='lavadora']:checked").val();
        var casa = jQuery("input[name='casa']:checked").val();
        var secadora = jQuery("input[name='secadora']:checked").val();
        var nuevo = jQuery("input[name='nuevo']:checked").val();
        var eco = jQuery("input[name='eco']:checked").val();
        
        var propiedades = {"lava": lava, "casa": casa, "secadora": secadora, "nuevo": nuevo, "eco": eco}; //pasamos todo via json

        jQuery('#divResultado').css("display", "none");

        jQuery('#loading').html('<img src="http://www.gifmania.com/Gif-Animados-Web/Imagenes-Rotulos-Webs/Rotulos-Cargando/Circulo-Carga-62157.gif" class="loading" />  ');
        jQuery.ajax({
           url: "<?php echo Mage::getUrl('elegir-mi-electrodomestico/lavadoras/guardar') ?>",
           type: "POST",
           data: propiedades,
           success: function(data){
               jQuery('#loading').hide();
               jQuery('#divResultado').slideDown('slow');
               if (data == '1'){
                   vaciarCampos();
                   jQuery('.no-results').html('Lamentamos informarle que no hemos podido conseguir una lavadora que se adapte a sus necesidades, si lo prefiere puede volver a realizar el test');
               }
               else{
                    var resul = JSON.parse(data);
                    vaciarCampos();
                    for (var i=0; i <= resul.length; i++){
                        jQuery('#res' + i).html('<a href="'+ resul[i].url +'"><img src="' + resul[i].image + '" /></a><p class="lead">' + resul[i].nombre + '</p>');
                        //PARA ELEGIR
                        //precio = resul[i].precio
                        //descripcion_corta = resul[i].desc_corta
                    }
               }
           }
        });
    }
    
</script>